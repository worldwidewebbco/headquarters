{
	"name": "headquarters",
	"private": true,
	"packageManager": "pnpm@9.15.0",
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"lint": "biome check .",
		"format": "biome format --write .",
		"typecheck": "turbo typecheck",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css}": [
			"biome check --write"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@playwright/test": "^1.57.0",
		"@vitest/coverage-v8": "^4.0.15",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.6.3",
		"vitest": "^4.0.15"
	}
}
